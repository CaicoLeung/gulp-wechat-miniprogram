root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.{html,wxml,hbr,rt,css,less,scss}]
indent_style = space
tab_width = 2
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_size = 2
